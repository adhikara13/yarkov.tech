---
import type { Props as BaseHeadProps } from "@components/BaseHead.astro";
import { DEFAULT_LANGUAGE, SITE_METADATA } from "@root/constants";
import BaseHead from "@components/BaseHead.astro";
import BaseLayout from "@components/BaseLayout.astro";

export interface Props extends BaseHeadProps {
	lang?: string | undefined;
	noIndex?: boolean | undefined;
	canonicalUrl?: string | undefined;
}

const { title, description, lang = DEFAULT_LANGUAGE, noIndex = false } = Astro.props as Props;
---

<html lang={lang}>
	<BaseHead
		title={title ? `${title} | ${SITE_METADATA.title}` : SITE_METADATA.title}
		description={description}
	>
		{noIndex && <meta name="robots" content="noindex" />}
	</BaseHead>
	<BaseLayout>
		<div class="container">
			<slot />
		</div>
	</BaseLayout>
</html>
