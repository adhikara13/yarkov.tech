{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"types": ["vite/client", "@astrojs/image/client", "@types/mdx"],
		"sourceMap": true,
		"baseUrl": ".",
		"jsx": "preserve",
		"paths": {
			"@root/*": ["./src/*"],
			"@styles/*": ["./src/styles/*"],
			"@components/*": ["./src/components/*"],
			"@templates/*": ["./src/templates/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@utils/*": ["./src/utils/*"],
			"@stores/*": ["./src/stores/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@i18n/*": ["./src/i18n/*"],
			"@images/*": ["./src/images/*"]
		},
		"outDir": "./dist",
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts"]
}
